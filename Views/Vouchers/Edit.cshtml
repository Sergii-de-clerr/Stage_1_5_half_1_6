@model TourBase_Stage_1_2.Voucher

@{
    ViewData["Title"] = "Виправити ваучер";
}

<h1>Виправити ваучер</h1>

<h4>Ваучер</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VoucherId" />
            <div class="form-group">
                <label asp-for="TakeOffDate" class="control-label"></label>
                <input asp-for="TakeOffDate" class="form-control" />
                <span asp-validation-for="TakeOffDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TouristId" class="control-label"></label>
                <select asp-for="TouristId" class="form-control" asp-items="ViewBag.TouristId"></select>
                <span asp-validation-for="TouristId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourId" class="control-label"></label>
                <select asp-for="TourId" class="form-control" asp-items="ViewBag.TourId"></select>
                <span asp-validation-for="TourId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до таблиці туристів</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
